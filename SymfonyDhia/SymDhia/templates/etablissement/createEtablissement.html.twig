        {{ form_errors(f.adresse,{'attr':{'class':'text-danger'}}) }}

        <label for="inputText" class="col-sm-6 col-form-label">DESCRIPTION</label>
        <div class="form-group">
            {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}
        </div>
