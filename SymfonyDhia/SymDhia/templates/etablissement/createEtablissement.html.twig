{% extends 'base.html.twig' %}

{% block body %}

    <div class="column" style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

    <div class="card">
    <div class="card-body">
    <h5 class="card-title">Add Etablissement Backend ADMIN</h5>

        {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
        <label for="inputText" class="col-sm-4 col-form-label">ID PROP</label>
