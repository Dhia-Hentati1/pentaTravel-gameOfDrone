            {{ form_widget(f.id_prop,{'attr':{'class':'form-control'}}) }}
        </div>
        {{ form_errors(f.id_prop,{'attr':{'class':'text-danger'}}) }}

        <label for="inputText" class="col-sm-4 col-form-label">NUMERO</label>
        <div class="form-group">
            {{ form_widget(f.numero,{'attr':{'class':'form-control'}}) }}
        </div>
        {{ form_errors(f.numero,{'attr':{'class':'text-danger'}}) }}

        <label for="inputText" class="col-sm-4 col-form-label">TYPE</label>
        <div class="form-group">
            {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}
        </div>
        {{ form_errors(f.type,{'attr':{'class':'text-danger'}}) }}

        <label for="inputText" class="col-sm-4 col-form-label">NOM</label>
        <div class="form-group">
            {{ form_widget(f.nom,{'attr':{'class':'form-control'}}) }}
        </div>
        {{ form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}

