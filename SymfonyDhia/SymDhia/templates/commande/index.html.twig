{% extends 'base.html.twig' %}

{% block title %}Hello CommandeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID Etablissement</th>
            <th>Prix</th>
            <th>Description</th>
            <th>Modification</th>
            <th>Suppression</th></tr>
        </thead>

        <tbody>
        {% for commande in c %}
            <tr>
               {# <td>{{ commande.etablissement.nom }}</td>#}
                <td>{{ commande.prix }}</td>
                <td>{{ commande.description }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('modifCommande',{'id':commande.id}) }}">Modifier</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('supp_commande',{'id':commande.id}) }}">Supprimer</a>
                </td>


            </tr>

        {% endfor %}

        </tbody>
    </table>
</div>
{% endblock %}
