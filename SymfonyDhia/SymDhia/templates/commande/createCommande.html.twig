{% extends 'base.html.twig' %}

{% block body %}

    <div class="column" style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Add Commande Backend ADMIN</h5>

                {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                <label for="inputText" class="col-sm-4 col-form-label">PRIX</label>
                <div class="form-group">
                    {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.prix,{'attr':{'class':'text-danger'}}) }}
                

                <label for="inputText" class="col-sm-4 col-form-label">ADRESSE</label>
                <div class="form-group">
                    {{ form_widget(f.adresse,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.adresse,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-6 col-form-label">DESCRIPTION</label>
                <div class="form-group">
                    {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.description,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">AVIS</label>
                <div class="form-group">
                    {{ form_widget(f.avis,{'attr':{'class':'form-control'}}) }}
                </div>
                {{ form_errors(f.avis,{'attr':{'class':'text-danger'}}) }}

                <br/>
                <div class="form-group" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                </div>
                {{ form_end(f) }}
            </div>
        </div>
    </div>

{% endblock%}